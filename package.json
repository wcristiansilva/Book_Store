{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.7",
    "@rails/webpacker": "5.4.4",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.4",
    "esbuild": "^0.17.18",
    "sass": "^1.62.0",
    "webpack": "4.46.0",
    "webpack-cli": "3.3.12"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    //"build:js:devise": "esbuild app/javascript/devise.js --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:devise": "sass ./app/assets/stylesheets/devise.scss:./app/assets/builds/devise.css --no-source-map --load-path=node_modules"
  },
  "devDependencies": {
    "webpack-dev-server": "3"
  }
}
