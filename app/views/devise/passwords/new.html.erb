<%= simple_form_for(resource, html: { class:'login-form'}, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="text-center">
    <%= f.error_notification %>
  </div>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "Email",
                input_html: { autocomplete: "email" } %>
  </div>

  <%= render 'devise/shared/button_submit', f: f, text: 'Recuperar senha'%>

  <div class="form-group d-md-flex">
    <div class="w-100 text-md-right">
      <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>
